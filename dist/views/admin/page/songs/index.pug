
extends ../../layouts/default.pug

block main
    h1(class="mb-4") #{titlePage}
    .card.mb-3
        .card-header Danh sách
        .card-body
            .row
                .col-8
                .col-4.d-flex.justify-content-end
                    a(href=`/${prefixAdmin}/songs/create`
                    class="btn btn-outline-success") Thêm mới
            table(class="table table-hover table-sm" checkbox-multi)
                thead
                    tr
                        th(scope="col") STT
                        th(scope="col") Hình ảnh
                        th(scope="col") Tiêu đề
                        th(scope="col") Trạng thái
                        th(scope="col") Hàng động
                tbody
                    each item, index in songs

                        tr
                            td #{index + 1}
                            td 
                                img(src=item.avatar alt=item.title style="width: 100px; height: 50px;")
                            td #{item.title}
                            td
                                if (item.status == "active")
                                    a(href="javascript:;"
                                    data-status="active"
                                    data-id=item.id
                                    button-change-status
                                    class="badge text-bg-success text-decoration-none") Hoạt động 
                                else
                                    a(href="javascript:;"
                                    data-status="inactive"
                                    data-id=item.id
                                    button-change-status
                                    class="badge text-bg-danger text-decoration-none") Ngừng hoạt động
                            td
                                a(class="btn btn-secondary btn-sm text-decoration-none" href=`/${prefixAdmin}/songs/detail/${item.id}`) Chi tiết
                                a(class="btn btn-warning btn-sm text-decoration-none" href=`/${prefixAdmin}/songs/edit/${item.id}`) Sửa
                                button(class="btn btn-danger btn-sm ml-1"
                                        button-delete
                                        data-id=item.id) xóa